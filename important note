<!DOCTYPE html>
<html>
<head>
  <title>CRITICAL SYSTEM FAILURE</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background: black;
      color: #00ff00;
      font-family: monospace;
      overflow: hidden;
      position: relative;
    }

    /* MATRIX CANVAS (optional ‚Äî or you can remove it if you don't want rain) */
    #matrix {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      z-index: 0; /* behind console & images */
    }

    /* Scary image overlay */
    #scary {
      position: fixed;
      top:0; left:0;
      width: 100vw;
      height: 100vh;
      background-size: cover;
      background-position: center;
      z-index: 5;
      display: none;
      pointer-events: none;
    }

    /* Console text container */
    #console {
      white-space: pre-wrap;
      padding: 20px;
      z-index: 10;
      position: relative;
    }

    /* Screen shake effect (subtle) */
    .shake {
      animation: shake 0.15s infinite;
    }
    @keyframes shake {
      0% { transform: translate(0,0); }
      25% { transform: translate(2px,-2px); }
      50% { transform: translate(-2px,2px); }
      75% { transform: translate(2px,2px); }
    }

    /* Flash effect for ‚Äúexplosion‚Äù or red flicker */
    .flash {
      animation: flash 0.15s infinite;
    }
    @keyframes flash {
      0% { background: rgba(255,0,0,0.3); }
      50% { background: rgba(255,0,0,0.6); }
      100% { background: rgba(255,0,0,0.3); }
    }

    /* Blue‚Äëscreen fake crash */
    #bluescreen {
      position: fixed;
      top:0; left:0;
      width:100vw;
      height:100vh;
      background:#0000AA;
      color:white;
      font-family: monospace;
      font-size: 22px;
      display: flex;
      justify-content:center;
      align-items:center;
      text-align:center;
      z-index:1000;
      display:none;
    }

    /* Explosion / flash overlay */
    .explode {
      position: fixed;
      width: 100vw;
      height: 100vh;
      top: 0; left: 0;
      background-size: cover;
      background-position: center;
      z-index: 999;
      animation: boom 1s forwards;
    }
    @keyframes boom {
      0% {opacity: 0;}
      20% {opacity: 1;}
      100% {opacity: 0;}
    }
  </style>
</head>
<body class="shake">
  <canvas id="matrix"></canvas>
  <div id="scary"></div>
  <div id="console"></div>
  <div id="bluescreen">:(</div>

  <audio id="alarm" src="https://actions.google.com/sounds/v1/alarms/beep_short.ogg"></audio>

  <script>
    const consoleBox = document.getElementById("console");
    const alarm = document.getElementById("alarm");
    const bluescreen = document.getElementById("bluescreen");
    const scary = document.getElementById("scary");

    // ‚Äî PATH TO YOUR SCARY IMAGE (with two hooded men) ‚Äî replace this URL
    const scaryImage = "https://i.imgur.com/YourScaryImage.jpg";
    scary.style.backgroundImage = `url(${scaryImage})`;

    // Optional: MATRIX rain background
    const canvas = document.getElementById("matrix");
    const ctx = canvas.getContext("2d");
    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight;

    const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$%^&*";
    const fontSize = 14;
    const columns = Math.floor(canvas.width / fontSize);
    const drops = Array(columns).fill(0);

    function drawMatrix() {
      ctx.fillStyle = "rgba(0, 0, 0, 0.1)";
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      ctx.fillStyle = "#00ff00";
      ctx.font = fontSize + "px monospace";

      for (let i = 0; i < drops.length; i++) {
        const text = letters.charAt(Math.floor(Math.random() * letters.length));
        ctx.fillText(text, i * fontSize, drops[i] * fontSize);
        if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
          drops[i] = 0;
        }
        drops[i]++;
      }
    }

    setInterval(drawMatrix, 50);

    // Utility to write lines with delay and beep
    function writeLine(text, delay = 300) {
      return new Promise(resolve => {
        setTimeout(() => {
          consoleBox.innerHTML += text + "\n";
          alarm.play();
          resolve();
        }, delay);
      });
    }

    function explosion() {
      const boom = document.createElement("div");
      boom.className = "explode";
      boom.style.backgroundImage = "url('https://i.imgur.com/8bXw6.gif')";
      document.body.appendChild(boom);
      setTimeout(() => boom.remove(), 1200);
    }

    // Show scary image for a short flicker
    function scaryFlicker(duration = 800) {
      return new Promise(resolve => {
        scary.style.display = "block";
        setTimeout(() => {
          scary.style.display = "none";
          resolve();
        }, duration);
      });
    }

    async function meltdown() {
      await writeLine("> SYSTEM ALERT: Unauthorized activity detected.");
      await writeLine("> Tracking unknown intrusion source...");
      await writeLine("> WARNING: USER IS THE THREAT.");

      for (let i = 1; i <= 10; i++) {
        await writeLine(`> ERROR CODE: CHAOS-0x${Math.floor(Math.random() * 9999)}`);
        await writeLine(`> CPU instability: Level ${Math.floor(Math.random() * 100)}%`);
        await writeLine(`> Network integrity: Compromised`);
      }

      // Flicker scary image once (you can move this anywhere)
      await scaryFlicker(900);

      await writeLine("\n> Engaging meltdown sequence...");
      for (let i = 5; i >= 1; i--) {
        await writeLine(">> SYSTEM COLLAPSE IN " + i + "...");
      }

      explosion();
      document.body.classList.add("flash");

      await writeLine("\n> SYSTEM FAILURE: Structural integrity lost.");
      await writeLine("> Kernel panic imminent.");
      await writeLine("> Emergency shutdown failed.");

      const scaryLines = [
        "Scanning for hidden malware...",
        "Rootkit detected in core system.",
        "Memory dump corrupted.",
        "Security protocols overridden...",
        "Kernel panic imminent...",
        "User sanity: NOT GUARANTEED",
        "Attempting emergency shutdown...",
        "Shutdown failed!",
        "Overwriting bootloader...",
        "Critical system meltdown in progress..."
      ];
      for (const line of scaryLines) {
        await writeLine("> " + line);
      }

      // Blue screen (fake crash) for 3 seconds
      consoleBox.style.display = "none";
      bluescreen.style.display = "flex";
      await new Promise(r => setTimeout(r, 3000));
      bluescreen.style.display = "none";
      consoleBox.style.display = "block";

      // Final prank message in console
      consoleBox.innerHTML += "\n\nüíÄüíÄüíÄ YOU ARE PRANKED! üíÄüíÄüíÄ\n";
      consoleBox.innerHTML += "Relax ‚Äî nothing is actually broken üòé\n";
    }

    meltdown();
  </script>
</body>
</html>
